#!/bin/sh

clock=$(date '+%I')

. sb-theme
case "$clock" in
	"00") icon="^c$color^ï€—  ^d^" ;;
	"01") icon="^c$color^ï€—  ^d^" ;;
	"02") icon="^c$color^ï€—  ^d^" ;;
	"03") icon="^c$color^ï€—  ^d^" ;;
	"04") icon="^c$color^ï€—  ^d^" ;;
	"05") icon="^c$color^ï€—  ^d^" ;;
	"06") icon="^c$color^ï€—  ^d^" ;;
	"07") icon="^c$color^ï€—  ^d^" ;;
	"08") icon="^c$color^ï€—  ^d^" ;;
	"09") icon="^c$color^ï€—  ^d^" ;;
	"10") icon="^c$color^ï€—  ^d^" ;;
	"11") icon="^c$color^ï€—  ^d^" ;;
	"12") icon="^c$color^ï€—  ^d^" ;;
