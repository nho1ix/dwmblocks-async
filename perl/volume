#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pavucontrol ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 1 ;;
	5) pamixer --allow-boost -d 1 ;;
#	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
	3) notify-send "ï€¨  Volume module" "\- Shows volume ï€¨, ï€¦ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

#[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit
[ $(pamixer --get-mute) = true ] && echo ï€¦ Muted && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
#	icon="ðŸ”Š"
	icon="ï€¨  "
elif [ "$vol" -lt "35" ]; then
#	icon="ðŸ”ˆ"
	icon="ï€¦  "
else
#	icon="ðŸ”‰"
	icon="ï€§  "
fi

printf "^c#99c1e9^ %s^d^^c#FFFFFF^%s^d^\n" "$icon" "$vol%"
